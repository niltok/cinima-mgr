@using cinima_mgr.Data
@using cinima_mgr.Service
@inject StateCache StateCache
@using Blazorise

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">喵票票</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi"><Icon Name="IconName.Home"/></span> 主页
            </NavLink>
        </div>
        <!-- 登录用户功能 -->
        @if (Logined)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/MyTickets" Match="NavLinkMatch.All">
                    <span class="oi"><Icon Name="IconName.Wallet"/></span> 票夹
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/MyOrders" Match="NavLinkMatch.All">
                    <span class="oi"><Icon Name="IconName.Receipt"/></span> 订单
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/MyDiscounts" Match="NavLinkMatch.All">
                    <span class="oi"><Icon Name="IconName.TicketAlt"/></span> 我的优惠券
                </NavLink>
            </div>
            <!-- 管理员功能 -->
            @if (IsMgr)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/CheckTicket" Match="NavLinkMatch.All">
                        验票
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/MovieMgr" Match="NavLinkMatch.All">
                        管理电影
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/RoomMgr" Match="NavLinkMatch.All">
                        管理房间
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Show/Range" Match="NavLinkMatch.All">
                        安排场次
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/UserMgr" Match="NavLinkMatch.All">
                        管理用户
                    </NavLink>
                </div>
            }
        }
        
    </nav>
</div>

@code {

    [Parameter]
    public bool Logined { get; set; } = false;

    [Parameter]
    public bool IsMgr { get; set; } = false;
    
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : "show";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
